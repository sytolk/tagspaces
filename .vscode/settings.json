{
  "javascript.validate.enable": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "cSpell.userWords": ["customizability", "mapique", "tagspaces", "treeviz"],
  "cSpell.diagnosticLevel": "Hint",
  "typescript.format.enable": true,
  "terminal.integrated.scrollback": 10000,
  "search.exclude": {
    ".git": true,
    "cordova": true,
    "dll": true,
    "app/dist": true,
    "web": true,
    "node_modules": false
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "cSpell.words": [
    "Affero",
    "flowtype",
    "fsextra",
    "haftungsbeschraenkt",
    "lastindex",
    "nbsp",
    "taggroup",
    "taglibrary",
    "textcolor",
    "winattr"
  ],
  "flow.enabled": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ]
}
