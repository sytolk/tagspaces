{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext", // es5
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "esnext", // esnext, commonjs
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"], // "lib": ["es2015", "dom"],
    "paths": {
      "-/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/node_modules/@tagspaces/pro/**/*.ts",
    "app/node_modules/@tagspaces/pro/**/*.tsx"
  ]
  // "exclude": [
  //  "node_modules",
  //  "**/node_modules/*",
  //  "extensions",
  //  "cordova",
  //  "web",
  //  "tests"
  //]
}
